<%- include('./adminViews/partials/header.ejs')    %>

<section>
    <form method="post">
    <table class="table table-bordered w-50 mx-auto table-info text-center mt-3">
        <thead>
            <tr>
                <td colspan="2">Login Form</td>
            </tr>
        </thead>
        <tbody>
        
            <tr>
                <td>Email</td>
                <td><input type="email" name="mailId"/></td>
            </tr>
            <tr>
                <td>Password</td>
                <td><input type="password" name="pwd"/></td>
            </tr>
            
            <tr>
                <td colspan="2"><input type="submit" name="loginBtn" value="Login" class="btn btn-primary"  /></td>
            </tr>
            
        </tbody>
    </table>

    </form>
    <% if(msg){%>
        <p class="alert alert-success w-58 mx-auto"><%=msg%></p>
    <% }%>
</section>

